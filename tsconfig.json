{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      // import index exported members
      // should be at top for highest priority
      "assets": ["./src/assets"],
      "common": ["./src/common"],
      "components": ["./src/components"],
      "generated": ["./src/generated"],
      "helpers": ["./src/helpers"],
      "hooks": ["./src/hooks"],
      "layout": ["./src/layout"],
      "pages": ["./src/pages"],
      "styles": ["./src/styles"],
      "types": ["./src/types"],

      // import files inside the folders
      "assets/*": ["./src/assets/*"],
      "common/*": ["./src/common/*"],
      "components/*": ["./src/components/*"],
      "generated/*": ["./src/generated/*"],
      "helpers/*": ["./src/helpers/*"],
      "hooks/*": ["./src/hooks/*"],
      "layout/*": ["./src/layout/*"],
      "pages/*": ["./src/pages/*"],
      "styles/*": ["./src/styles/*"],
      "types/*": ["./src/types/*"],

      // import root files
      // should always be at bottom for lowest priority
      "src/*": ["./src/*"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx", "postCSS/*.js"]
}
