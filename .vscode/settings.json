{
    "editor.codeActionsOnSave": {
        "source.fixAll": "explicit",
        "source.fixAll.stylelint": "explicit"
    },
    "[postcss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "files.associations": {
        "*.gql": "graphql",
        "*.css": "postcss"
    },
    "editor.indentSize": 4,
    "editor.detectIndentation": false,
    "cssvar.ignore": ["**/node_modules/**", "**/dist/**"]
}
